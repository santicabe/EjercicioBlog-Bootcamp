<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/admin.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link rel="shortcut icon" href="/img/gordo-colombes-logo" />
  </head>
  <body>
    <%- include("navbar")-%>
    <div class="container overflow-hidden">
      <div class="row gx-5" id="row">
        <h2>Listado de articulos</h2>
        <div class="col-7 mt-3">
          <table class="table table-striped shadow">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Titulo</th>
                <th scope="col">Autor</th>
                <th scope="col">Fecha</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% articulos.forEach(element => { %>

              <tr>
                <th scope="row"><%= element.id %></th>
                <td><%= element.title %></td>
                <td><%= element.id %></td>
                <td><%= element.createdAt %></td>
                <td>
                  <a href="/delete/<%= element.id %> " class="btn btn-danger"
                    >Eliminar</a
                  >
                  <a href="/update/<%= element.id %> " class="btn btn-success"
                    >Modificar</a
                  >
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <div class="col-5">
          <div id="crear-articulo" class="p-3 border rounded shadow">
            <h3 class="mb-4">Crear articulo</h3>
            <form
              action="/administrador"
              method="POST"
              enctype="multipart/form-data"
            >
              <label for="title" class="mb-3">Titulo</label>
              <input
                type="text"
                id="title"
                class="form-control mb-3"
                name="title"
              />
              <label for="content" class="mb-3">Contenido</label>
              <input
                type="text"
                id="content"
                class="form-control mb-3"
                name="content"
              />
              <label for="img" class="mb-3">Imagen</label>
              <input
                type="file"
                id="img"
                class="form-control mb-3"
                name="image"
                accept="image/jpg, image/png"
              />
              <label for="authorId">Seleccionar autor:</label>
              <select id="authorId" name="authorId">
                <% authors.forEach(author => { %>
                <option value="<%= author.id %> ">
                  <%=`${author.firstname} ${author.lastname}`%>
                </option>
                <% }) %>
              </select>
              <div id="btn-crear">
                <button type="submit" class="btn btn-success">Crear!</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="/controllers/adminController.js"></script>
    <%- include("footer")-%>
    <script src="/public/delete.js"></script>
  </body>
</html>
