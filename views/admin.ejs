<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/css/navbar.css" />
    <link rel="stylesheet" href="/css/admin.css" />
    <link rel="stylesheet" href="/css/footer.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />
    <link rel="shortcut icon" href="/img/gordo-colombes-logo" />
  </head>
  <body>
    <%- include("navbar")-%>
    <div class="container">
      <div class="row">
        <h4>Listado de articulos</h4>
        <div class="col-7 mt-3">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Titulo</th>
                <th scope="col">Autor</th>
                <th scope="col">Fecha</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% articulos.forEach(element => { %>

              <tr>
                <th scope="row"><%= element.id %></th>
                <td><%= element.titulo %></td>
                <td><%= element.autorNombre %><%= element.autorApellido %></td>
                <td><%= element.fechaDeCreacion %></td>
                <td><button class="btn btn-danger">Eliminar</button></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <div class="col-5">
          <div id="crear-articulo" class="p-3 border rounded tabcontent">
            <h3 class="mb-4">Crear articulo</h3>
            <form action="/administrador" method="POST">
              <label for="title" class="mb-3">Titulo</label>
              <input
                type="text"
                id="title"
                class="form-control mb-3"
                name="title"
              />
              <label for="content" class="mb-3">Contenido</label>
              <input
                type="text"
                id="content"
                class="form-control mb-3"
                name="content"
              />
              <label for="img" class="mb-3">Imagen</label>
              <input
                type="file"
                id="img"
                class="form-control mb-3"
                name="imagen"
                accept="image/jpg, image/png"
              />
              <label for="authorName" class="mb-3">Nombre de autor</label>
              <input
                type="text"
                id="authorName"
                class="form-control mb-3"
                name="authorName"
              />
              <label for="authorLastname" class="mb-3">Apellido de autor</label>
              <input
                type="text"
                id="authorLastname"
                class="form-control mb-3"
                name="authorLastname"
              />
              <label for="authorEmail" class="mb-3">Email de autor</label>
              <input
                type="text"
                id="authorEmail"
                class="form-control mb-3"
                name="authorEmail"
              />
              <div id="btn-crear">
                <button type="submit" class="btn btn-success">Crear!</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-7"></div>
        <div class="col-5">
          <div id="modificar-articulo" class="p-3 border rounded">
            <h3 class="mb-4">Modificar articulo</h3>
            <form
              action="/administrador"
              method="POST"
              enctype="multipart/form-data"
            >
              <label for="titleChange" class="mb-3">Titulo</label>
              <input
                type="text"
                id="titleChange"
                class="form-control mb-3"
                name="title"
              />
              <label for="contentChange" class="mb-3">Contenido</label>
              <input
                type="text"
                id="contentChange"
                class="form-control mb-3"
                name="content"
              />
              <label for="imgChange" class="mb-3">Imagen</label>
              <input
                type="file"
                id="imgChange"
                class="form-control mb-3"
                name="imagen"
                accept="image/jpg, image/png"
              />
              <label for="authorNameChange" class="mb-3">Nombre de autor</label>
              <input
                type="text"
                id="authorNameChange"
                class="form-control mb-3"
                name="authorName"
              />
              <label for="authorLastnameChange" class="mb-3"
                >Apellido de autor</label
              >
              <input
                type="text"
                id="authorLastnameChange"
                class="form-control mb-3"
                name="authorLastname"
              />
              <label for="authorEmailChange" class="mb-3">Email de autor</label>
              <input
                type="text"
                id="authorEmailChange"
                class="form-control mb-3"
                name="authorEmail"
              />
            </form>
            <div id="btn-crear">
              <button type="submit" class="btn btn-primary">Modificar!</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include("footer")-%>
  </body>
</html>
